                @Html.TextBox("userName")
            </span>
        </div>
        <div>
            <span>
                @Html.Name("userNic")
                @Html.Label("NIC #")
                @Html.TextBox("userNic")
            </span>
        </div>
        <div>
            <input type="submit" value="book now">
        </div>
    </div>
}
    
